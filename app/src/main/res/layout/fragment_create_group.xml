<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Nome do Grupo"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <EditText
        android:id="@+id/editNomeGrupo"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/txtConfig"
        android:layout_alignRight="@+id/txtConfig"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="-28dp"
        android:layout_marginRight="-28dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="CookNow"
        android:inputType="text" />

    <TextView
        android:id="@+id/txtDescrGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtConfig"
        android:layout_alignLeft="@+id/txtConfig"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="80dp"
        android:text="Descrição"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <EditText
        android:id="@+id/editDescrGrupo"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/txtDescrGrupo"
        android:layout_alignRight="@+id/txtInteresses"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="-57dp"
        android:layout_marginRight="-37dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Grupos para compartilhar receitas"
        android:inputType="text" />

    <TextView
        android:id="@+id/txtNumParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtConfig"
        android:layout_alignRight="@+id/txtConfig"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Participantes"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txtNumParticipantes"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rect_bg"
        android:max="10"
        android:progress="1" />

    <TextView
        android:id="@+id/progresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:text="2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/interesses"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progresso"
        android:layout_centerHorizontal="true"
        android:text="Interesses"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento"/>

    <LinearLayout
        android:id="@+id/editInteresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/interesses">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editInteresseGp1"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:ems="10"
                android:hint="1. "
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editInteresseGp2"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:ems="10"
                android:hint="2. "
                android:inputType="textPersonName"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editInteresseGp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:ems="10"
                android:hint="3. "
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editInteresseGp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:ems="10"
                android:hint="4. "
                android:inputType="textPersonName"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_below="@+id/editInteresses"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Criar" />



</RelativeLayout>