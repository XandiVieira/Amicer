<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtNomeGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Nome do Grupo"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento"/>

    <EditText
        android:id="@+id/editNomeGrupo"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/txtNomeGrupo"
        android:layout_alignRight="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginRight="-10dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:text="CookNow" />

    <TextView
        android:id="@+id/txtDescrGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNomeGrupo"
        android:layout_alignLeft="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="91dp"
        android:text="Descrição"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <EditText
        android:id="@+id/editDescrGrupo"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/txtDescrGrupo"
        android:layout_alignRight="@+id/txtInteresses"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="-30dp"
        android:layout_marginRight="-28dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:text="Grupos para compartilhar receitas" />

    <TextView
        android:id="@+id/txtNumParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtNomeGrupo"
        android:layout_alignRight="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="Participantes"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/txtNumParticipantes"
        android:layout_alignRight="@+id/txtInteresses"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-18dp"
        android:layout_marginRight="-32dp"
        android:layout_marginBottom="388dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/txtInteresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBar"
        android:layout_alignLeft="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="274dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Interesses"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <EditText
        android:id="@+id/editInteresses"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/txtInteresses"
        android:layout_alignRight="@+id/txtInteresses"
        android:layout_alignParentTop="true"
        android:layout_marginTop="313dp"
        android:layout_marginEnd="-28dp"
        android:layout_marginRight="-28dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:text="Cozinhar"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="322dp"
        android:text="Criar" />

</RelativeLayout>