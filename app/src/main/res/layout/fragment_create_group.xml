<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtNomeGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Nome do Grupo"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <EditText
        android:id="@+id/editNomeGrupo"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/txtNomeGrupo"
        android:layout_alignRight="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="-29dp"
        android:layout_marginRight="-29dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:text="CookNow" />

    <TextView
        android:id="@+id/txtDescrGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNomeGrupo"
        android:layout_alignLeft="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="82dp"
        android:text="Descrição"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <EditText
        android:id="@+id/editDescrGrupo"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/txtDescrGrupo"
        android:layout_alignRight="@+id/txtInteresses"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="-58dp"
        android:layout_marginRight="-37dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:text="Grupos para compartilhar receitas" />

    <TextView
        android:id="@+id/txtNumParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtNomeGrupo"
        android:layout_alignRight="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Participantes"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txtNumParticipantes"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rect_bg"
        android:max="10"
        android:progress="1" />

    <TextView
        android:id="@+id/progresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:text="2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtInteresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBar"
        android:layout_alignLeft="@+id/txtNomeGrupo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="266dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Interesses"
        android:textSize="20dp"
        app:fontFamily="@font/quattrocento" />

    <EditText
        android:id="@+id/editInteresses"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/txtInteresses"
        android:layout_alignRight="@+id/txtInteresses"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="-57dp"
        android:layout_marginRight="-57dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:text="Cozinhar" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="309dp"
        android:text="Criar" />

</RelativeLayout>