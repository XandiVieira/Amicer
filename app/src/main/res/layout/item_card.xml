<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="5dp"
        android:background="@color/white"
        android:elevation="12dp"
        android:padding="5dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/photo1"
                   android:layout_width="match_parent"
                   android:layout_height="400dp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right">

                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:background="@drawable/circle2">

                       <TextView
                           android:id="@+id/compatibility"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="100%"
                           android:fontFamily="@font/quattrocento"
                           android:textSize="35sp"
                           android:textStyle="bold"
                           android:gravity="center"
                           android:textColor="@color/colorPrimary"
                           android:elevation="12dp"/>
                   </FrameLayout>
               </LinearLayout>
           </RelativeLayout>

            <TextView
                android:id="@+id/nameAndAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/quattrocento"
                android:text="Nome, age"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/quattrocento"
                android:text="distance"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quattrocento"
                android:text="Interesses"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.pchmn.materialchips.ChipsInput
                android:id="@+id/chipsInterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:clickable="false"
                android:elevation="3dp"
                android:focusable="false"
                app:chip_backgroundColor="@color/grey"
                app:chip_deletable="true"
                app:chip_detailed_deleteIconColor="@color/colorAccent"
                app:chip_hasAvatarIcon="false"
                app:hint="#"
                app:textColor="@color/black" />

            <TextView
                android:id="@+id/aboutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quattrocento"
                android:text="Sobre"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aboutInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/quattrocento"
                android:text="I like coffee and bla bla bla"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quattrocento"
                android:text="Outros Interesses"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.pchmn.materialchips.ChipsInput
                android:id="@+id/chipsMoreInterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:clickable="false"
                android:elevation="3dp"
                android:focusable="false"
                app:chip_backgroundColor="@color/grey"
                app:chip_deletable="true"
                app:chip_detailed_deleteIconColor="@color/colorAccent"
                app:chip_hasAvatarIcon="false"
                app:hint="#"
                app:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quattrocento"
                android:text="Mais Sobre"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moreAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/quattrocento"
                android:text="Trabalho"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quattrocento"
                android:gravity="center"
                android:text="Galeria"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:elevation="12dp"/>

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:elevation="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>